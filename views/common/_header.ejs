            active: function() {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- JQUERY -->
    <!--<script src="/jquery/jquery.min.js"></script>-->
    <script type="text/javascript" src="/js/plugins/jquery/docs/js/jquery-2.1.3.min.js"></script>
    <!-- sweetalert-->
    <script src="/sweetalert/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="/sweetalert/sweetalert2.min.css">
    <script src="/bootstrap-fileinput/js/fileinput.min.js"></script>
    <link href="/bootstrap-fileinput/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
    <!-- Socket.io -->
    <script src="/socket/socket.io.js"></script>
    <!-- Ckeditor -->
    <script src="/ckeditor/ckeditor.js"></script>
    <!-- Animate.css -->
    <link href="/template/documentation/assets/prism.css" rel="stylesheet" />
    <!--File_input-->
    <!-- the fileinput plugin styling CSS file -->
   
    <script src="/bootstrap-fileinput/js/plugins/piexif.min.js" type="text/javascript"></script>
    <script src="/bootstrap-fileinput/js/plugins/sortable.min.js" type="text/javascript"></script>
   
    
    <!-- CSS Files -->
    <link rel="stylesheet" href="/template/examples/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/template/examples/assets/css/atlantis.min.css">
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link rel="stylesheet" href="/template/examples/assets/css/demo.css">
    <link rel="stylesheet" href="/css/custom.css">
    <!-- Chosen select -->
    <link rel="stylesheet" href="/js/plugins/choosen/chosen.css">
    <!--Dropzone js-->
    <link rel="stylesheet" href="/js/plugins/dropzone-5.7.0/dist/dropzone.css">
</head>

<body onload="active_load()">
    <div class="wrapper sidebar_minimize">
        <div class="main-header">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="white">

                <div class="logo">
                    <img src="/images/logo.png" alt="navbar brand" class="navbar-brand">
                    
                </div>
                <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse" data-target="collapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon">
						<i class="icon-menu"></i>
					</span>
				</button>
                <button class="topbar-toggler more"><i class="icon-options-vertical"></i></button>
                <div class="nav-toggle">
                    <button class="btn btn-toggle toggle-sidebar">
						<i class="icon-menu"></i>
					</button>
                </div>
            </div>
            <!-- End Logo Header -->

            <!-- Navbar Header -->
            <nav id="custom_nav_header" class="navbar navbar-header navbar-expand-lg" data-background-color="white">

                <div class="container-fluid">
                    <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
                        <li class="nav-item toggle-nav-search hidden-caret">
                            <a class="nav-link" data-toggle="collapse" href="#search-nav" role="button" aria-expanded="false" aria-controls="search-nav">
                                <i class="fa fa-search"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown hidden-caret">
                            <a class="nav-link dropdown-toggle notif" href="#" id="messageDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <!--<span class="notification nb_msg">4</span>-->
                                <i class="fa fa-envelope"></i>
                            </a>
                            <ul class="dropdown-menu messages-notif-box animated fadeIn" aria-labelledby="messageDropdown">
                                <li>
                                    <div class="dropdown-title d-flex justify-content-between align-items-center">
                                        Messages
                                        <a class="small small-n"></a>
                                    </div>
                                </li>
                                <li>
                                    <div class="message-notif-scroll scrollbar-outer">
                                        <div class="notif-center">
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="/template/assets/img/jm_denis.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject"><%= user.name %> </span>
                                                    <span class="block">
														How are you ?
													</span>
                                                    <span class="time">5 minutes ago</span>
                                                </div>
                                            </a>
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="/template/assets/img/chadengle.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Chad</span>
                                                    <span class="block">
														Ok, Thanks !
													</span>
                                                    <span class="time">12 minutes ago</span>
                                                </div>
                                            </a>
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="/template/assets/img/mlane.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Jhon Doe</span>
                                                    <span class="block">
														Ready for the meeting today...
													</span>
                                                    <span class="time">12 minutes ago</span>
                                                </div>
                                            </a>
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="/template/assets/img/talha.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Talha</span>
                                                    <span class="block">
														Hi, Apa Kabar ?
													</span>
                                                    <span class="time">17 minutes ago</span>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a class="see-all">Voir tout les messages<i class="fa fa-angle-right"></i> </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown hidden-caret">
                            <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false">
                                <div class="avatar-sm">
                                    <% if (user.photo ==='') { %>
                                        <img src="/template/assets/img/profile.jpg" alt="..." class="avatar-img rounded-circle">
                                     <% } else { %>
                                        <img src="/images/upload/<%= user.photo %>" alt="..." class="avatar-img rounded-circle">
                                    <% } %>
                                </div>
                            </a>
                            <ul id="box_app" class="dropdown-menu dropdown-user animated fadeIn">
                                <div class="dropdown-user-scroll scrollbar-outer">
                                    <li>
                                        <div class="user-box">
                                            <div class="avatar-lg">
                                                <% if (user.photo ==='') { %>
                                                    <img src="/template/assets/img/profile.jpg" alt="image profile" class="avatar-img rounded">
                                                 <% } else { %>
                                                    <img src="/images/upload/<%= user.photo %>" alt="image profile" class="avatar-img rounded">
                                                <% } %>
                                               
                                            </div>
                                            <div class="u-text name">
                                                <h4><%= user.name %></h4>
                                            </div>
                                        </div>
                                        <div class="text-muted mail"> <%= user.email %> </div>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item profile">
                                           <i class="fas fa-user"></i> Mon Profile</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item account_setting">
                                        <i class="fas fa-user-cog"></i>  Paramètres
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item logout" href="/logout">
                                        <i class="fas fa-sign-out-alt"></i> Déconnecter
                                        </a>
                                    </li>
                                </div>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- End Navbar -->
        </div>
        <!-- Sidebar -->
        <div class="sidebar sidebar-style-2">

            <div class="sidebar-wrapper scrollbar scrollbar-inner">
                <div class="sidebar-content">
                    <div class="user">
                        <div class="avatar-sm float-left mr-2">
                            <% if (user.photo ==='') { %>
                                <img src="/template/assets/img/profile.jpg" alt="..." class="avatar-img rounded-circle">
                             <% } else { %>
                                <img src="/images/upload/<%= user.photo %>" alt="..." class="avatar-img rounded-circle">
                            <% } %>
                        </div>
                        <div class="info">
                            <div id="user">
                                <strong><%= user.name %></strong>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <ul class="nav nav-success">
                        <li class="nav-item">
                            <a data-toggle="collapse" href="#dashboard" class="collapsed" id="id" aria-expanded="false">
                                <i class="fas fa-home"></i>
                                <p>SMMC</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="dashboard">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a href="/acceuil/plateforme">
                                            <span class="sub-item">Accueil</span>
                                        </a>
                                    </li>
                                    <% if (user.role === 'Technicien') { %>
                                        <li>
                                            <a href="/directions">
                                                <span class="sub-item">Directions</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/departements">
                                                <span class="sub-item">Départements</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/services">
                                                <span class="sub-item">Services</span>
                                            </a>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-section">
                            <span class="sidebar-mini-icon">
								<i class="fa fa-ellipsis-h"></i>
							</span>
                            <h4 id="divider" class="text-section">--o0o--</h4>
                        </li>
                        <% if (user.role === 'Technicien') { %>
                            <li class="nav-item">
                                <a data-toggle="collapse" href="#tiers" class="collapsed" id="id" aria-expanded="false">
                                    <i class="fas fa-users"></i>
                                    <p>Tiers</p>
                                    <span class="caret"></span>
                                </a>
                                <div class="collapse" id="tiers">
                                    <ul class="nav nav-collapse">
                                        <li>
                                            <a href="/utilisateurs">
                                                <span class="sub-item">Utilisateurs</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a data-toggle="collapse" href="#materiel" class="collapsed" id="id" aria-expanded="false">
                                    <i class="fas fa-laptop"></i>
                                    <p>Matériels</p>
                                    <span class="caret"></span>
                                </a>
                                <div class="collapse" id="materiel">
                                    <ul class="nav nav-collapse">
                                        <li>
                                            <a href="/materiels">
                                                <span class="sub-item">Matériels</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/pieces">
                                                <span class="sub-item">Pièce de rechange</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a data-toggle="collapse" href="#base">
                                    <i class="fas fa-wrench"></i>
                                    <p>Dépannage</p>
                                    <span class="caret"></span>
                                </a>
                                <div class="collapse" id="base">
                                    <ul class="nav nav-collapse">
                                        <li>
                                            <a name="link" href="/depannage/direct">
                                                <span class="sub-item">Nouveau dépannage</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/log">
                                                <span class="sub-item">Historisation</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a href="/message" class="show_mess">
                                <i class="fas fa-comments"></i>
                                <p>Message(s)</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="main-panel">
            <div class="content">
                <div id="sender" hidden><%=user.name%>/<%=user.id%></div>
                <input id="_user_role" type="text" value="<%=user.role%>" hidden>
                <input id="_user_id" type="text" value="<%=user.id%>" hidden>